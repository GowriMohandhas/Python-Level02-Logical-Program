print("triangle program")
print("----------------")
a=int(input("enter the a value:"))
b=int(input("enter the b value:"))
c=int(input("enter the c value:"))
h=int(input("enter the h value:"))
print("result")
peri=a+b+c
print("perimeter of triangle:",peri)
area=1/2*b*h
print("area of triangle:",area)
